{% for book in books %}

<div class="m-0 p-2">
    <div class="book-card">
        <div class="photo">

            {% if book.images[0].name %}
            <img class="book-pic" src="{{asset('static/book/uploads/' ~ book.images[0].name)}}"
                                  alt="image du livre">
            {% else %}
            <img class="book-pic" src="{{asset('build/images/cover.png')}}"
                                  alt="image du livre">
            {% endif %}
            <div class="overlay d-flex justify-content-center  align-items-center">
                <a href="{{ path('product', {'id': book.id}) }}"
                   class="btn btn-info p-2">
                    Details
                </a>
            </div>

        </div>
        <div class="info p-2 d-flex flex-column justify-content-between">
            <h3 class="m-0">{{book.title}}</h3>
            <div class="d-flex justify-content-between w-100">
                <p class="m-0">{{book.author.firstname}} {{book.author.lastname}}</p>
                <p class="m-0">{{book.year}}</p>
            </div>
            <div class="row">
                <div class="col-4 d-flex align-items-center">
                    <p class="m-0 pl-2" id="price">
                    <span>{{book.price}}</span>&euro;
                    </p>
                </div>
                <div class="col-8 d-flex justify-content-end">
                    <a href="{{ path('addItem', {'id': book.id}) }}"
                       class="addItem btn btn-info">
                        <i class="fas fa-shopping-cart"></i>
                        Ajouter
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endfor %}
