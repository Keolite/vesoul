{% extends "dashboard-admin/base.html.twig" %}

	{% block title %}
        {{ title }}
    {% endblock %}

	{% block body %}


				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalCenterTitle">Ajouter un livre</h5>

					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body row">
					<label class="py-1 m-0 col-4" for="title">
						<strong>Titre :
						</strong>
					</label>
					<input class="my-1 col-7" name="title" type="text">
					<label class="py-1 m-0 col-4" for="isbn">
						<strong>Code ISBN :
						</strong>
					</label>
					<input class="my-1 col-7" name="isbn" type="text">
					<label class="py-1 m-0 col-4" for="auteur">
						<strong>Auteur :
						</strong>
					</label>
					<input class="my-1 col-7" name="auteur" type="text">
					<label class="py-1 m-0 col-4" for="prix">
						<strong>Prix :
						</strong>
					</label>
					<input class="my-1 col-7" name="prix" type="text">€
					<label class="py-1 m-0 col-4" for="cat">
						<strong>Catégories :
						</strong>
					</label>
					<input class="my-1 col-7" name="cat" type="text">
					<label class="py-1 m-0 col-4" for="desc">
						<strong>Description :
						</strong>
					</label>
					<input class="my-1 col-7" name="desc" type="text">
					<p class="pl-3">
						<strong>Image(s) :
						</strong>
					</p>
					<div class="images d-flex flex-wrap">
						<fieldset>
							<label class="addImg mt-1 ml-1 d-flex justify-content-center align-items-center" for="img">
								<i class="p-1 fas fa-plus"></i>
							</label>
							<input class="" name="img" id="img" type="file">
						</fieldset>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Enregistrer</button>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
