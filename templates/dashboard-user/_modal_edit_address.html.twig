<!-- Modal editer adresse -->
<div class="modal fade" id="edit-modal-{{ adresse.id }}" tabindex="-1" role="dialog" aria-labelledby="add-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-head d-flex align-items-center p-2">
                <div class="col-8 offset-2 d-flex justify-content-center">
                    <h5 class="h5 modal-title" id="cmd-title">Modifier une adresse</h5>
                </div>
                <div class="col-2">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>


            <div class="modal-body d-flex p-3">

                <form method="post" name="edit_address" action="{{ path("dashboard_user_addresses_edit", {'id': adresse.id }) }}">

                    <div class="d-flex flex-column">

                        <div>
                            <input type="text" id="edit_addresses_title" name="edit_addresses[title]"
                                    required="required" class="form-control mb-4" placeholder="libellé"
                                    value="{{ adresse.title }}">
                        </div>

                        <div>
                            <input type="text" id="edit_addresses_lastname" name="edit_addresses[lastname]"
                                    required="required" class="form-control mb-4" placeholder="Nom"
                                    value="{{ adresse.lastname }}">
                        </div>

                        <div>
                            <input type="text" id="edit_addresses_firstname" name="edit_addresses[firstname]"
                                    required="required" class="form-control mb-4" placeholder="Prénom"
                                    value="{{ adresse.firstname }}">
                        </div>

                        <div class="d-flex justify-content-between">
                            <input type="text" id="edit_addresses_number" name="edit_addresses[number]"
                                   required="required" class="col-5 form-control mb-4" placeholder="Numéro"
                                   value="{{ adresse.number }}">

                            <select id="edit_addresses_type" name="edit_addresses[type]"
                                    class="custom-select col-5 form-control mb-4">
                                <option value="Type ?" selected="selected" disabled="disabled">Type</option>
                                <option value="Livraison">Livraison</option>
                                <option value="Facturation">Facturation</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <input type="text" id="edit_addresses_street" name="edit_addresses[street]"
                                   required="required" class="col-5 form-control mb-4" placeholder="Rue"
                                   value="{{ adresse.street }}">
                            <input type="text" id="edit_addresses_city" name="edit_addresses[city]" required="required"
                                   class="col-5 form-control mb-4" placeholder="Ville" value="{{ adresse.city }}">
                        </div>

                        <div class="d-flex justify-content-between">
                            <input type="text" id="edit_addresses_cp" name="edit_addresses[cp]" required="required"
                                   class="col-5 form-control mb-4" placeholder="Code Postal" value="{{ adresse.cp }}">
                            <input type="text" id="edit_addresses_country" name="edit_addresses[country]"
                                   required="required" class="col-5 form-control mb-4" placeholder="Pays"
                                   value="{{ adresse.country }}">
                        </div>

                        <div>
                            <input type="text" id="edit_addresses_additional" name="edit_addresses[additional]"
                                    class="form-control mb-4" placeholder="Informations supplémentaires">
                        </div>

                    </div>


                    <div class="modal-footer d-flex justify-content-center border-top-0 p-0">
                        <button class="btn-edit-address btn btn-info w-100" type="submit">
                            Enregistrer
                        </button>
                    </div>


                </form>

            </div>
        </div>
    </div>
</div>